{
  "name": "RihnoBot",
  "description": "Telegram autofilter bot",
  "env": {
    "API_ID": {"description": "Telegram API ID", "required": true},
    "API_HASH": {"description": "Telegram API Hash", "required": true},
    "BOT_TOKEN": {"description": "Telegram Bot Token", "required": true},
    "MONGO_URI": {"description": "MongoDB URI", "required": true},
    "DB_NAME": {"description": "MongoDB database name", "default": "RihnoBotDB"},
    "CHANNEL_URL": {"description": "Channel URL", "required": true},
    "ADMIN_IDS": {"description": "Comma-separated admin IDs", "required": true},
    "AUTO_DELETE_TIME": {"description": "Message auto-delete time (seconds)", "default": "300"},
    "INITIAL_CREDITS": {"description": "Initial user credits", "default": "10"}
  },
  "formation": {
    "worker": {"quantity": 1, "size": "free"}
  },
  "stack": "heroku-22"
}